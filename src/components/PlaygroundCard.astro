---
interface Props {
    title: string;
    description: string;
    tags: string[];
    link?: string;
    active_link: boolean;
    image?: string;
}

const { title, description, tags, link, active_link, image } = Astro.props;
---

<div class="border rounded border-white hover:bg-[#30302e]">
    {active_link ? (
        <a href={link} class="no-underline">
            <div class="flex flex-col gap-2">
                <div class="flex flex-col">
                    {image && (
                        <img 
                            src={image} 
                            alt={`${title} logo`} 
                            class="h-40"
                        />
                    )}
                </div>
                <div class="text-sm text-gray-300 px-5 pb-5">
                    <div class="text-white md:max-w-full text-xl">{title}</div>
                    <div class="flex gap-1 text-sm text-[#c96442] font-bold overflow-hidden text-ellipsis">
                        {tags.map((tag, idx) => (
                            <div class="text-nowrap">
                                {idx === 0 ? tag : `| ${tag}`}
                            </div>
                        ))}
                    </div>
                    <div>
                        {description}
                    </div>
                </div>
            </div>
        </a>
    ) : (
        <div class="flex flex-col gap-2">
            <div class="text-sm text-gray-300 px-5 pb-5">
                <div class="text-white md:max-w-full text-xl">{title}</div>
                <div class="flex gap-1 text-sm text-[#c96442] font-bold overflow-hidden text-ellipsis">
                    {tags.map((tag, idx) => (
                        <div class="text-nowrap">
                            {idx === 0 ? tag : `| ${tag}`}
                        </div>
                    ))}
                </div>
                <div>
                    {description}
                </div>
            </div>
        </div>
    )}
</div>

