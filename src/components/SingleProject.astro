---
import { Users,Github } from '@lucide/astro';

const {title,num_contributors,description,github_link,slug, activeLink} = Astro.props;

const redirectLink = `/projects/${slug}`
---

<div class="border p-5">
  <div class="flex justify-between">
    <div class="flex gap-1">
      { activeLink
        ? <a class="text-xl max-w-30 md:max-w-full hover:underline" href={redirectLink}>{title}</a>
        : <h3 class="text-xl max-w-30 md:max-w-full text-gray-300">{title}</h3>
      }
      <div class="text-gray-300 flex gap-1">
        <Users/>
        {num_contributors} 
      </div>
    </div>
    <div>
      <a href={github_link}>
        <Github/>
      </a>
    </div>
  </div>
  <div class="text-md text-gray-300">
    {description}
  </div>
</div>