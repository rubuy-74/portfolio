---
import Layout from '../layouts/Layout.astro';
import { Gamepad } from '@lucide/astro';
import PlaygroundCard from '../components/PlaygroundCard.astro';
import PlaygroundGrid from '../components/PlaygroundGrid.astro';
---

<Layout title="Rubem | About me">
    <h1 class="text-3xl font-bold m-0 mt-5 no-underline">Rubem Neto</h1>
    <p class="mb-6 text-[#c96442]">Software Engineering Student</p>
    <h2 class="flex gap-2 items-center text-2xl font-bold leading-snug mb-4">
        <Gamepad size={30}/>
        <div>
            Playground
        </div>
    </h2>
    <div class="prose prose-lg">
        <h3 class="mb-6">
            Here are some projects that you can play with:
        </h3>
        <PlaygroundGrid />
    </div>
</Layout>
